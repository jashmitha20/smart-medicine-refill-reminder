# Backend Environment Configuration Template
# Copy this file to .env and update the values

# Database Configuration (MySQL Production)
DB_URL=jdbc:mysql://localhost:3306/medicine_refill_db
DB_USERNAME=medicine_user
DB_PASSWORD=your_secure_database_password

# Email Configuration (Gmail)
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password

# JWT Security Configuration
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long-for-security

# Server Configuration
SERVER_PORT=8080

# Profile Configuration
SPRING_PROFILES_ACTIVE=dev

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

# H2 Configuration (Development only)
H2_CONSOLE_ENABLED=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001